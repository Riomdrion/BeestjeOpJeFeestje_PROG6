@model BeestjeOpJeFeestje_PROG6.ViewModel.UserViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Message"]
        </div>
    }

    <h2>Login</h2>
    <form method="post" asp-action="Login" asp-controller="User">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="Email" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="PasswordHash" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <hr>

    <h2>Wachtwoord Hasher</h2>
    <form method="post" asp-action="HashPassword" asp-controller="User">
        <div class="form-group">
            <label for="hashEmail">Email:</label>
            <input type="email" class="form-control" id="hashEmail" name="email" required>
        </div>
        <div class="form-group">
            <label for="plainPassword">Voer een wachtwoord in:</label>
            <input type="password" class="form-control" id="plainPassword" name="plainPassword" required>
        </div>
        <button type="submit" class="btn btn-secondary">Hash Wachtwoord</button>
    </form>

    @if (ViewBag.HashedPassword != null)
    {
        <div class="mt-3">
            <h4>Gehasht Wachtwoord:</h4>
            <p class="alert alert-info">@ViewBag.HashedPassword</p>
        </div>
    }
</div>